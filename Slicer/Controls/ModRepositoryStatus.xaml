<UserControl x:Class="Slicer.Controls.ModRepositoryStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="300">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="StatusIcon" FontFamily="Segoe MDL2 Assets" Text="&#xF13E;" FontSize="75" FontWeight="UltraBold" Foreground="Green"/>
            <StackPanel Width="auto" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                <TextBlock x:Name="StatusText" Text="Up to date!" Style="{DynamicResource SubheaderTextBlockStyle}"/>
            </StackPanel>
        </StackPanel>
        <TextBlock Padding="8 4 0 0" x:Name="LastUpdateText">
            Last updated: 2021-02-1 3:21 PM (Just now)
        </TextBlock>
    </StackPanel>
</UserControl>