<ui:ContentDialog x:Name="Root"
                  x:Class="DeliCounter.Controls.ProgressDialogue"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:ui="http://schemas.modernwpf.com/2019"
                  PrimaryButtonText="Ok"
                  IsPrimaryButtonEnabled="False"
                  DefaultButton="Primary">

    <DockPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <!-- Content body -->
        <TextBlock x:Name="Message" TextWrapping="Wrap" DockPanel.Dock="Top"
                   Text="This is some example text. Doo dee da dee wop" />
        <ui:ProgressBar x:Name="ProgressBar" DockPanel.Dock="Bottom" Minimum="0" Maximum="1" />
    </DockPanel>

</ui:ContentDialog>