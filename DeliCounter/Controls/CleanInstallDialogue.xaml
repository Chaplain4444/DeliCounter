<ui:ContentDialog  xmlns:ui="http://schemas.modernwpf.com/2019"
                   x:Class="DeliCounter.Controls.CleanInstallDialogue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeliCounter.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
                   SecondaryButtonText="Yes"
                   DefaultButton="Secondary"
                   PrimaryButtonText="No"
                   SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
                   PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <!-- Content body -->
        <TextBlock x:Name="Message" TextWrapping="Wrap">
            Would you like to clean your game's install? If you have previously modded your game manually or with another tool this is required and will remove all modded content.
        </TextBlock>
    </StackPanel>

</ui:ContentDialog>
