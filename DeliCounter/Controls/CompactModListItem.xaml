<abstract:ModListItem  x:Class="DeliCounter.Controls.CompactModListItem"
             xmlns:abstract="clr-namespace:DeliCounter.Controls.Abstract"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="400"
             Height="30">
    <DockPanel>
        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 16 0">
            <TextBlock x:Name="LocalStatusIcon" FontFamily="Segoe MDL2 Assets" Text="&#xE8FB;" FontSize="20"
                       FontWeight="UltraBold" />
        </StackPanel>
        <StackPanel VerticalAlignment="Center">
            <TextBlock x:Name="ModTitle" Text="Placeholder Mod name" Style="{StaticResource SubtitleTextBlockStyle}" 
                       TextWrapping="NoWrap"/>
        </StackPanel>
    </DockPanel>
</abstract:ModListItem>